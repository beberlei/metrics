        "symfony/http-kernel": "~3.3 || ~4.0",
        "phpunit/phpunit": "^6"
    },
    "autoload": {
        "psr-4": {
            "Beberlei\\Metrics\\": "src/Beberlei/Metrics",
            "Beberlei\\Bundle\\MetricsBundle\\": "src/Beberlei/Bundle/MetricsBundle"
